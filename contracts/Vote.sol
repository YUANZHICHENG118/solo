contract Vote is Ownable {

    uint public cycle;

    mapping(uint=>mapping(address=>uint)) public poll;
    mapping(uint=>mapping(address=>bool)) public voterStatus;

    IERC20 token;
    mapping(uint=>bool) public voteStatus;

    constructor(IERC20 _token) public {
        token = _token;
    }


    function vote(address elector) public returns(uint) {
        require(voteStatus[cycle],"not start");
        require(!voterStatus[cycle][msg.sender],"have voted");
        poll[cycle][elector]+=token.balanceOf(msg.sender);
    }

    function setVoteStatus(bool _voteStatus) public onlyOwner {
        voteStatus[cycle] = _voteStatus;
    }

    function settle() public onlyOwner {
        cycle++;
    }

}