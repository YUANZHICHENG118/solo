    IMdexFactory public factory;
    
    event Combine();
    
    constructor(IMDexRouter _router) public{
        router  = _router;
        factory = IMdexFactory(router.factory());
    }
    
    function combine(address inToken,uint256 _amount, address lpToken) internal returns(uint256 liquidity) {

        require(_amount>0,"not good");        
        address _pair = lpToken;
        require(_pair!=address(0),"no lp");

        address lpToken0 = IMdexPair(_pair).token0();
        address lpToken1 = IMdexPair(_pair).token1();
        require(inToken==lpToken0||inToken==lpToken1,"error path");

        address[] memory routesToken = new address[](2);
        // address[] memory routesToken1;

        if(lpToken0!=inToken) {
            (lpToken0,lpToken1) = (lpToken1,lpToken0);
        }

        routesToken[0] = lpToken0;
        routesToken[1] = lpToken1;

        uint256 lpToken0Amount = _amount;
        IERC20(lpToken0).approve(address(router), 0);
        IERC20(lpToken0).approve(address(router), lpToken0Amount);
        lpToken0Amount = lpToken0Amount.div(2);
        uint[] memory amounts = router.swapExactTokensForTokens(
            lpToken0Amount,
            1,
            routesToken,
            address(this),
            block.timestamp
        );
        uint256 lpToken1Amount = amounts[amounts.length - 1];
        IERC20(lpToken1).approve(address(router), 0);
        IERC20(lpToken1).approve(address(router), lpToken1Amount);
        (,, liquidity) = router.addLiquidity(
            lpToken0,
            lpToken1,
            lpToken0Amount,
            lpToken1Amount,
            1, // we are willing to take whatever the pair gives us
            1, // we are willing to take whatever the pair gives us
            address(this),
            block.timestamp
        );
        
    }
    
    function separate(address outToken,uint256 amount,address lpToken) internal returns(uint256 outTokenAmount){
        address _pair = lpToken;
        require(_pair!=address(0),"no lp");

        address lpToken0 = IMdexPair(_pair).token0();
        address lpToken1 = IMdexPair(_pair).token1();
        require(outToken==lpToken0||outToken==lpToken1,"error path");
        IMdexPair(_pair).transferFrom(address(this), _pair, amount);
        (uint amount0, uint amount1) = IMdexPair(_pair).burn(address(this));
        
        address[] memory routesToken = new address[](2);

        if(lpToken0==outToken) {
            (lpToken0,lpToken1) = (lpToken1,lpToken0);
            (amount0,amount1) = (amount1, amount0);
        }
        routesToken[0] = lpToken0;
        routesToken[1] = lpToken1;
        
        IERC20(lpToken0).approve(address(router), 0);
        IERC20(lpToken0).approve(address(router), amount0);
        uint[] memory amounts = router.swapExactTokensForTokens(
            amount0,
            1,
            routesToken,
            address(this),
            block.timestamp
        );
        
        outTokenAmount = amounts[amounts.length - 1] + amount1;
    }
}


