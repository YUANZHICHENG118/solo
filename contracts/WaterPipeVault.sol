abstract contract Vault is IVault, ERC20, Operatable, ReentrancyGuard,ComLiquidate {
    using Address for address;
    using SafeMath for uint;

    uint256 public constant feeMax = 10000;
    uint public constant max = 10000;

    uint public min = 9500;
    address public controller;
    uint256 public withdrawalFee = 0;

    address private _underlying;
    address private _strategy;
    
    // address private feeAddress = 0x417D32aA45441524F14f997809B480a4D19Cc2e5;
    // uint private feeRate = 20;
    address private fundAddress = 0xa23Af2ee807d61eAF1AdFa4E39Ff26554521c605;
    uint public fundRate;
    address private devAddress = 0xfBC864DE2b22D3224391fD4B1B9846054e791970;
    uint public devRate;

    constructor (address _token, address _controller,IMDexRouter _router) public ERC20(
        string(abi.encodePacked("con ", ERC20(_token).name())),
        string(abi.encodePacked("c", ERC20(_token).symbol()))
    ) ComLiquidate(_router) Operatable(){
        _underlying = _token;
        controller = _controller;
    }

    function balance() public view returns (uint) {
        return getBalance().add(IStrategy(_strategy).underlyingBalance());
    }

    function rewardBalance() public view returns (uint) {
        return IERC20(IStrategy(_strategy).rewardToken()).balanceOf(address(this));
    }

    function setMin(uint _min) external onlyOperator {
        min = _min;
    }

    function setController(address _controller) public onlyOperator {
        controller = _controller;
    }

    // Custom logic in here for how much the vault allows to be borrowed
    // Sets minimum required on-hand to keep small withdrawals cheap
    function available() public view returns (uint) {
        return getBalance().mul(min).div(max);
    }

    function earn() public {
        require(IController(controller).check(msg.sender), "address is ban");
        uint _bal = available();
        IERC20(_underlying).transfer(_strategy, _bal);
        IStrategy(_strategy).invest();

    }

    function stakeAll(address inToken) external {
        stake(inToken,IERC20(_underlying).balanceOf(msg.sender));
    }

    function allotBonus(uint amount,address outToken) internal returns(uint) {
        uint _fundFee = amount.mul(fundRate)/10000;
        uint _devFee = amount.mul(devRate)/10000;
        doTransferOut(fundAddress,outToken,_fundFee);
        doTransferOut(devAddress,outToken,_devFee);
        return amount.sub(_fundFee).sub(_devFee);
    }



    function stake(address inToken,uint _amount) public override {
        require(IController(controller).check(msg.sender), "address is ban");
        require(_amount > 0, "amount must greater than 0");
        uint _pool = balance();
        uint _before = getBalance();
        doTransferIn(msg.sender, inToken, _amount);
        uint _rest = allotBonus(_amount,inToken);
        combine(inToken, _rest, underlying());
        uint _after = getBalance();
        _amount = _after.sub(_before);
        // getPricePerFullShare
        uint shares = 0;
        if (totalSupply() == 0) {
            shares = _amount;
        } else {
            shares = (_amount.mul(totalSupply())).div(_pool);
        }
        _mint(msg.sender, shares);
    }


    function exit(address outToken) external override {
        withdraw(balanceOf(msg.sender),outToken);
    }

    // Someone might type the wrong coin into the contract, and the operator would take it out
    function salvageToken(address reserve, uint amount) external onlyOperator {
        require(reserve != address(_underlying), "no underlying");
        IERC20(reserve).transfer(operator, amount);
    }

    function withdraw(uint _shares,address outToken) public nonReentrant override {
        uint r = (balance().mul(_shares)).div(totalSupply());
        uint rs = (rewardBalance().mul(_shares)).div(totalSupply());
        _burn(msg.sender, _shares);
        uint b = getBalance();
        if (b < r) {
            uint _withdraw = r.sub(b);
            IStrategy(_strategy).withdrawToVault(_withdraw);
            uint _after = getBalance();
            uint _diff = _after.sub(b);
            if (_diff < _withdraw) {
                r = b.add(_diff);
            }
        }
        uint or = separate(outToken, r, underlying());
        uint256 _fee = or.mul(withdrawalFee).div(feeMax);
        TransferHelper.safeTransfer(outToken, IController(controller).feeManager(), _fee);
        doTransferOut(msg.sender,outToken, or.sub(_fee));
        doSafeTransferRewardOut(msg.sender,rs);
    }

    function setWithdrawFee(uint256 _withdrawalFee) external onlyOperator {
        require(_withdrawalFee < feeMax.div(100), "inappropriate withdraw fee");
        withdrawalFee = _withdrawalFee;
    }
    
    function setFundFee(uint256 _fundFee) external onlyOperator {
        require(_fundFee < feeMax.div(100), "inappropriate withdraw fee");
        fundRate = _fundFee;
    }
    
    function setDevFee(uint256 _devFee) external onlyOperator {
        require(_devFee < feeMax.div(100), "inappropriate withdraw fee");
        devRate = _devFee;
    }

    function getPricePerFullShare() public override view returns (uint) {
        return balance().mul(1e18).div(totalSupply()).div(1e18);
    }

    function setStrategy(address _address) external override {
        require(msg.sender == controller || msg.sender == operator, "controller or Operatable");
        require(_address != address(0), "new _strategy cannot be empty");
        require(
            IStrategy(_address).underlying() == address(_underlying),
            "Vault underlying must match Strategy underlying"
        );
        require(IStrategy(_address).vault() == address(this), "the strategy does not belong to this vault");

        if (_address != _strategy) {
            if (_strategy != address(0)) {// if the original strategy (no underscore) is defined
                TransferHelper.safeApprove(_underlying, _strategy, 0);
                IStrategy(_strategy).withdrawToVault(IERC20(_underlying).balanceOf(_strategy));
            }
            _strategy = _address;
            TransferHelper.safeApprove(_underlying, _strategy, 0);
            TransferHelper.safeApprove(_underlying, _strategy, uint256(~0));
        }
    }

    function underlying() public override view returns (address){
        return _underlying;
    }

    function strategy() public override view returns (address){
        return _strategy;
    }

    function getBalance() internal virtual view returns (uint);

    function doTransferIn(address from,address inToken, uint amount) internal virtual returns (uint);

    function doTransferOut(address to,address outToken, uint amount) internal virtual;

    function doSafeTransferRewardOut(address to,uint reward) internal{
         uint256 rewardBal = rewardBalance();
        if (reward > rewardBal) {
           reward = rewardBal;
        }
        TransferHelper.safeTransfer(IStrategy(_strategy).rewardToken(), to, reward);
    }
}

